<div id="wrap">
  <div class="header1">
    <div class="logo">
      <%= link_to(image_tag(''),  home_index_path) %>
    </div>
    <div id="menu">
      <ul>
        <li class="selected"><%= link_to '首页', home_index_path %></li>
        <li><%= link_to '草莓时光', static_pages_about_path %></li>
        <li><%= link_to '草莓商城',  store_index_url %></li>
        <li><%= link_to '莓味佳肴',  recipe_blog_index_url %></li>
        <li><%= link_to '特品草莓园',  static_pages_agencygarden_path %></li>
        <li><%= link_to '草莓故事',  static_pages_story_path %></li>
        <li><%= link_to '最新资讯',  static_pages_newslist_path %></li>
        <li><%= link_to '莓园联盟',  static_pages_alliance_garden_path %></li>
        <li><%= link_to '联系我们', static_pages_contact_path %></li>      </ul>
    </div>
  </div>

  <div class="center_content">
    <div class="left_content">

    <div class="title"><span class="title_icon"><%= image_tag('bullet1.gif') %></span>登录</div>

      <div class="feat_prod_box1">

        <div class="prod_det_box1">

          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>

          <div class="box_center1">

            <div class="authform">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.input :email, label: '电子邮件：', required: false, autofocus: true %>
                <%= f.input :password, label: '登录密码：', required: false %>
                <%= f.input :remember_me, label: '记住登录状态', as: :boolean if devise_mapping.rememberable? %>
              </div>

              <br/>
              <div class="form-submit">
                <%= f.button :submit, '登录' %>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

          <div class="right_content">
            <%= render "devise/shared/links" %>
          </div><!--end of right content-->
    <div class="clear"></div>

  </div><!--end of center content-->


</div>