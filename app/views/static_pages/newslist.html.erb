
<body>
<div id="wrap">
  <div class="header1">
    <div class="logo">
      <%= link_to(image_tag(''),  home_index_path) %>
    </div>
    <div id="menu">
      <ul>
        <li><%= link_to '首页', home_index_path %></li>
        <li><%= link_to '草莓时光', static_pages_about_path %></li>
        <li><%= link_to '草莓商城',  store_index_url %></li>
        <li><%= link_to '莓味佳肴',  recipe_blog_index_url %></li>
        <li><%= link_to '特品草莓园',  static_pages_agencygarden_path %></li>
        <li><%= link_to '草莓故事',  static_pages_story_path %></li>
        <li class="selected"><%= link_to '最新资讯',  static_pages_newslist_path %></li>
        <li><%= link_to '莓园联盟',  static_pages_alliance_garden_path %></li>
        <li><%= link_to '联系我们', static_pages_contact_path %></li>
      </ul>
    </div>
  </div>


  <div class="center_content">
    <div class="left_content">

      <div class="title"><span class="title_icon"><%= image_tag('bullet1.gif') %></span>最新资讯</div>


      <div class="feat_prod_box">

        <div class="prod_det_box1">
          <div class="box_top1"></div>
          <div class="box_center1">
            <div class="prod_title">最新资讯</div>
            <p class="details">
            <p>
              <%= image_tag('aboutST.jpg', :alt=>'MUZT团队的草莓时光', :title=>'', :class=>'right', :width => '150') %>
            <p>    草莓时光网将关注所有与草莓相关的资讯。</p>
            <p>   。。。。。。</p>
            <p>。。。。。。。</p>
            </p>
            </p>

            <div class="clear"></div>
          </div>

          <!--start of newslist list -->
          <% if notice %>
            <p id="notice"><%= notice %></p>
          <% end %>

          <div id="recipe_list">
            <% @newslists.each do |newslist| %>
              <div class="recipe_blog_entry">
                <%= link_to image_tag(newslist.image, width:400, hight:400), newslist, :url => {:controller => 'newslists', :action => 'show' } %>
                <h3><%= newslist.title %></h3>
                <p><%= newslist.posttime %></p>
                <%= truncate(strip_tags(newslist.content), :length=>200) %>
                <div class="recipe_detail_line">
                  <%= link_to '浏览故事', newslist, :url => {:controller => 'newslists', :action => 'show', :target=>'_blank' } %>
                </div>
              </div>
            <% end %>
            <br/>
            <%= paginate @newslists, :left => 2, :right => 3 %>

          </div>
          <br>
          <!--end of newslist list -->


          <div class="box_bottom2"></div>
        </div>
        <div class="clear"></div>
      </div>
    </div><!--end of left content-->



    <div class="right_content">

      <%= render 'layouts/right_down_form' %>


    </div><!--end of right content-->


    <div class="clear"></div>
  </div><!--end of center content-->



</div>

</body>