


<div id="product_list">
  <h1>订单信息列表</h1>

  <table>
    <thead>
    <tr class="list_title">
      <th></th>
      <th>顾客姓名</th>
      <th>联系电话</th>
      <th>EMAIL</th>
      <th>快递地址</th>
      <th>付款方式</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td><%= image_tag('sb_pin.jpg', :class => 'list_image') %></td>
      <td><%= order.name %></td>
      <td><%= order.phone %></td>
      <td><%= order.email %></td>
      <td><%= order.address %></td>
      <td><%= order.pay_type %></td>

      <td class="list_actions">
        <%= link_to '查看订单', order %>
        <%= link_to '编辑订单', edit_order_path(order) %>
        <%= link_to '删除订单', order, method: :delete, data: { confirm: '确定删除此订单吗？' } %>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= paginate @orders, :left => 2, :right => 3 %>

</div>

