              <p>
                <strong>收货人姓名:</strong>
                <%= @order.name %>
              </p>
              <p>
                <strong>联系电话:</strong>
                <%= @order.phone %>
              </p>
              <p>
                <strong>电子邮箱:</strong>
                <%= @order.email %>
              </p>
              <p>
                <strong>收货地址:</strong>
                <%= @order.address %>
              </p>
              <p>
                <strong>付款种类:</strong>
                <%= @order.pay_type %>
              </p>
            </div>    <!--start of order show -->



          <div class="box_bottom2"></div>
        </div>
        <div class="clear"></div>
