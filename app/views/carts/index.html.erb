<h1>Listing carts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= link_to '查 看', cart %></td>
        <td><%= link_to '编 辑', edit_cart_path(cart) %></td>
        <td><%= link_to '删 除', cart, method: :delete, data: { confirm: '确定删除吗？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cart', new_cart_path %>

